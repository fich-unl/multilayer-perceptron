#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'perceptron'

puts "\n" + "*" * 80  + "\n" +
     " " * 20 + "Bienvenido al Ejercicio 3" + " " * 20 + "\n" +
     " " * 20 + "   Perceptron Multicapa" + " " * 20 + "\n" +
     "*" * 80 + "\n"

neuronalNetwork = Perceptron::NeuronalNetwork.new(3, [2, 5, 1], [3, 2, 1], 50)

layer = Perceptron::Layer.new(3, 2)

p "------------------"
p neuronalNetwork.vectorCapas
p "------------------"
p "------------------"
layer.calculateOutput([1, 3])

p layer
