#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'perceptron'

puts "\n" + "*" * 80  + "\n" +
     " " * 20 + "Bienvenido al Ejercicio 3" + " " * 20 + "\n" +
     " " * 20 + "   Perceptron Multicapa" + " " * 20 + "\n" +
     "*" * 80 + "\n"

or_path = 'concent.csv'
csv_tabla2 = Perceptor::Csv.new(or_path)

neuronalNetwork = Perceptron::NeuronalNetwork.new(2, csv_tabla2.matrix, [2, 1], 1, 0.5)
neuronalNetwork.trainingNetwork

aux =  neuronalNetwork.vectorCapas
p aux
puts "*" * 70
p neuronalNetwork.delta
